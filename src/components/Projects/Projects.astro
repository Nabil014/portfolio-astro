---
import data from '../../data/data.json'
import Card from './Card.astro'
---

<div
  class='flex items-center flex-col gap-y-8 justify-center pb-8 min-h-screen pt-[88px] text-white'
>
  <div class='flex w-full flex-col items-center gap-y-3'>
    <h2 class='text-4xl font-RobotoFlex tracking-[3px]'>Proyectos</h2>
    <div class='w-7 h-1 bg-[#f66a41] rounded-full'></div>
  </div>
  <div
    class='grid grid-cols-1 md:grid-cols-2 2xl:grid-cols-3 gap-12 place-items-center px-6'
  >
    {
      data.dataProjects.map((project) => (
        <Card
          demo={project.demo}
          repo={project.repo}
          image={project.image}
          title={project.title}
        />
      ))
    }
  </div>
</div>
